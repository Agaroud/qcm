{% extends 'base.html.twig' %}

{% block body %}

    <h3>Veuillez vous enregistrer</h3>

    {{ form_start(form) }}
    {{ form_row(form.email, {'attr' : {'class' : 'form-control'}})}}
    {{ form_row(form.nom, {'attr' : {'class' : 'form-control'}})}}
    {{ form_row(form.prenom, {'attr' : {'class' : 'form-control'}})}}
    {{ form_row(form.username, {'label': 'Pseudo','attr' : {'class' : 'form-control'}})}}
    {{ form_row(form.matricule, {'attr' : {'class' : 'form-control'}})}}
    {{ form_row(form.password, {'label': 'Mot de passe', 'attr' : {'class' : 'form-control'}})}}
    {{ form_row(form.confirm_password, {'label': 'Confirmez votre mot de passe', 'attr' : {'placeholder' : 'répétez votre mot de passe','class' : 'form-control'}})}}
    </br>
    <button type="submit" class="btn btn-success">Inscription</button>
    {{ form_end(form) }}
{% endblock %}