{% extends 'base.html.twig' %}

{% block body %}

    <h3>Veuillez vous enregistrer</h3>

    {{ form_start(form) }}
    {{ form_row(form.email)}}
    {{ form_row(form.nom)}}
    {{ form_row(form.prenom)}}
    {{ form_row(form.username, {'label' : 'Pseudo'})}}
    {{ form_row(form.matricule)}}
    {{ form_row(form.password, {'label': 'Mot de passe'})}}
    {{ form_row(form.confirm_password, {'label': 'Confirmez mot de passe', 'attr' : {'placeholder' : 'répétez votre mot de passe'}})}}
    <button type="submit" class="btn btn-success">Inscription</button>
    {{ form_end(form) }}
{% endblock %}